<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundLight"
    tools:context="gamer.sass.StartActivity">

    <ImageView
        android:id="@+id/start_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/sass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progress_start"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/start_image"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/start_image"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.73" />
</android.support.constraint.ConstraintLayout>
